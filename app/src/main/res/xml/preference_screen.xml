<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/load_countries_info_key"
            android:title="@string/load_countries_info_title"
            android:summaryOn="uploaded"
            android:summaryOff="not loaded"/>

        <EditTextPreference
            android:defaultValue="@string/magnitude_default_value"
            android:inputType="number"
            android:singleLine="true"
            android:key="@string/magnitude_key"
            android:title="@string/magnitude_title"/>

        <EditTextPreference
            android:defaultValue="@string/time_start_default_value"
            android:inputType="date"
            android:singleLine="true"
            android:key="@string/time_start_key"
            android:title="@string/time_start_title"/>
        <EditTextPreference
            android:defaultValue="@string/time_end_default_value"
            android:inputType="date"
            android:singleLine="true"
            android:key="@string/time_end_key"
            android:title="@string/time_end_title"/>
        <ListPreference
            android:defaultValue="All"
            android:key="@string/location_key"
            android:title="@string/location_title"/>

</PreferenceScreen>